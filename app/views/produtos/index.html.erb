 <table class="table table-bordered">
  <thead rowspan="1">
   <tr>
    <th>Nome</th>
	  <th>Descricao</th>
	  <th>Preço</th>
	  <th>Quantidade</th>
    <th>Ação Remove</th>
   </tr>
  </thead>
  <tbody>
    <% @produtos_por_nome.each do |produto| %>
    <tr>
      <td><%= produto.nome %></td>
      <td><%= produto.descricao %> </td>
      <td><%= produto.preco %> </td>
      <td><%= produto.quantidade %> </td>
      <td><%= link_to "Remover", produto, method: :delete %></td>
    </tr>
    <% end %>
